pipeline {
    agent {
        label 'growlt189'
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Debug') {
            steps {
                echo 'Current workspace:'
                sh 'ls -al'

                echo 'Contents of android directory:'
                sh 'ls -al android'

                echo 'Contents of project root directory:'
                sh 'ls -al'
            }
        }

        stage('Build APK') {
            steps {
                script {
                    def gradlewScript = sh(script: 'find . -name gradlew', returnStdout: true).trim()

                    if (gradlewScript) {
                        echo "Found gradlew script at: ${gradlewScript}"

                        def gradlewDir = gradlewScript.substring(0, gradlewScript.lastIndexOf('/'))
                        dir(gradlewDir) {
                            echo "Current directory: ${pwd()}"
                            sh "/snap/bin/flutter clean"
                            sh "/snap/bin/flutter pub get"
                            sh "/snap/bin/flutter build apk"
                        }
                    } else {
                        error "Couldn't find gradlew script in the workspace."
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    dir('/home/growlt189/jenkins') {
                        sh 'fastlane deploy_to_play_store'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}
