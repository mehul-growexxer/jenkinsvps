pipeline {
    agent {
        label 'growlt189'
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Debug') {
            steps {
                echo 'Current workspace:'
                sh 'ls -al'

                echo 'Contents of android directory:'
                sh 'ls -al android'

                echo 'Contents of project root directory:'
                sh 'ls -al'
            }
        }

        stage('Build APK') {
            steps {
                script {
                    def gradlewPath = '/home/growlt189/jenkins/android/gradlew'

                    // Run Flutter commands
                    sh "./${gradlewPath} clean"
                    sh "./${gradlewPath} pub get"
                    sh "./${gradlewPath} build apk"
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    dir('/home/growlt189/jenkins') {
                        sh 'fastlane deploy_to_play_store'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}
