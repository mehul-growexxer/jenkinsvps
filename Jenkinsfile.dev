pipeline {
    agent {
        label 'growlt189'
    }
 
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
 
        stage('Build APK') {
            steps {
                script {
                    
                    sh "/snap/bin/flutter clean"
                    sh "/snap/bin/flutter pub get"
                    sh "/snap/bin/flutter build apk"
                }
            }
        }
 
        stage('Deploy') {
            steps {
                script {
                    dir('/home/growlt189/jenkins/workspace/growlt189/android/gradlew') {
                        sh 'fastlane deploy_to_play_store'
                    }
                }
            }
        }
    }
 
    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}
